<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddDealFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/add_deal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="İlan Ekle"
            android:textStyle="bold"
            android:textSize="28sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Açıklama"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@drawable/edit_bg"
            android:padding="24dp"/>

        <EditText
            android:id="@+id/short_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Kısa Açıklama"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@drawable/edit_bg"
            android:padding="24dp"/>

        <EditText
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="fiyat"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@drawable/edit_bg"
            android:padding="24dp"/>

        <EditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Konum"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@drawable/edit_bg"
            android:padding="24dp"/>

        <Button
            android:id="@+id/btn_resim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/add_image_ic" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/deal_add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/button_bg"
            android:padding="16dp"
            android:text="İlan Ekle"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"/>





    </LinearLayout>

</RelativeLayout>